@model List<Final401.Models.ChatLog>
@{int count = 0;}
<h1 style="color: white; font-size: 1.5em; margin-bottom: 1em;">Schedule Bot's Recent Activity</h1>


@if (Model.Count == 0)
{
    <h3 style="color: red">No recent activity found.</h3>

}
else
{
    <table style="color: slategrey; border: 2px black solid; margin: 0px auto; box-shadow: 1px 1px 2px black;">
      
        @foreach (var item in Model)
        {
            if (count % 2 == 0)
            {
                <tr>
                    <td style="color: white; background-color: rgba(0, 0, 0, 0.2); border: 0px solid white; padding: 1em;">Event Time(UTC): @item.TimeStamp</td>
                    <td style="color: white; background-color: rgba(0, 0, 0, 0.2); padding: 1em;">Event: @item.Chat</td>
                </tr>
            }
            else
            {
                <tr>
                    <td style="color: black; background-color: rgb(224, 224, 235); border: 0px solid white; padding: 1em;font-weight: bold;">Event Time(UTC): @item.TimeStamp</td>
                    <td style="color: black; background-color: rgb(224, 224, 235); padding: 1em; font-weight: bold">Event: @item.Chat</td>
                </tr>
            }

            count++;
        }
     </table>
}


