@model List<Final401.Models.ScheduleItem>

@{Layout = "_Layout";}
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css"
      rel="stylesheet" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB"
      crossorigin="anonymous">
<link href="~/css/site.css" type="text/css" rel="stylesheet" />

<h2>@ViewData["Title"]</h2>



    <table class="table table-dark table-bordered table-hover" id="">
        <thead>
            <tr>
                <th class="tablesmall">
                    #
                </th>
                <th class="tablemedium" scope="col">
                    Date of Event
                </th>
                <th class="tablelarge" scope="col">
                    Content
                </th>
                <th class="tablesmall" scope="col">
                    Remove
                </th>
            </tr>
        </thead>
        <tbody>
            @{var counter = 1;}
            @foreach (ScheduleItem item in Model)
            {
            <tr scope="row">
                <th class="">@counter</th>
                <td class="">@item.StartTime.ToString("MM/dd/yyyy hh:mm tt")</td>
                <td class="">@item.Description</td>
                <td>
            <a asp-action="DeleteItem" asp-route-id="@item.ID">X</a>
        </td>
            </tr>
                counter++;
            }
        </tbody>
    </table>
