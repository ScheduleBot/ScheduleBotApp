        <div>
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Schedule Bot</a>
        </div>
        <nav>
            <ul>
                <li><a asp-area="" asp-controller="Home" asp-action="TestBot">TestBot</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="RecentActivity">Recent Activity</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="Notes">Custom Notes</a></li>
            </ul>
        </nav>
        <div id="AccountDiv">
            @if (SignInManager.IsSignedIn(User))
            {
                <a  asp-controller="Account" asp-action="Logout">Log Out</a>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login">Log In</a>
            }
        </div>

    </header>

    <main>
        @RenderBody()
    </main>    

    <footer>
        <hr />
